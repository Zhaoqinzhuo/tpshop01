		var md = $(this).attr("data-md");
		var px = $(this).attr("data-addpx");
		
		var top = $('.'+md).offset().top - 70;
		//$(window).scrollTop(top);
		
		if(typeof(px)!="undefined" && parseInt(px) > 0)
		{
			top = top + parseInt(px);	
		}
		$('html,body').animate({scrollTop:top}, 800);
		return false;
